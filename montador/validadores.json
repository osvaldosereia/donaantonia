      "message": "Use apenas números (vírgula ou ponto para decimais)"
    },
    "moeda": {
      "regex": "^\\d{1,3}(?:[\\.\\s]?\\d{3})*(?:[\\.,]\\d{2})?$",
      "message": "Formato de moeda válido (ex.: 2.500,00)"
    }
  },
  "map": {
    "case.admissao": "data",
    "case.saida": "data",
    "case.salario": "moeda",
